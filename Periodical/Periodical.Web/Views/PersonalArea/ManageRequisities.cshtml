        </div>



        <div>
            <div class="name-field">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="District">
                    <i class="material-icons">place</i>
                </label>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label post-index">
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.District, new { @class = "mdl-textfield__input inline-input" })
                        @Html.LabelFor(model => model.District, new { @class = "mdl-textfield__label" })
