                </label>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label city-country-input">
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Country, new { @class = "mdl-textfield__input inline-input" })
                        @Html.LabelFor(model => model.Country, new { @class = "mdl-textfield__label" })
                    </div>
                </div>

            </div>

            <div class="name-field">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="City">
                    <i class="material-icons">place</i>
                </label>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label city-country-input">
