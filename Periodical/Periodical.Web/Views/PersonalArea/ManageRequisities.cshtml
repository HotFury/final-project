                        @Html.TextBoxFor(model => model.Building, new { @class = "mdl-textfield__input inline-input" })
                        @Html.LabelFor(model => model.Building, new { @class = "mdl-textfield__label" })
                    </div>
                </div>

            </div>
            <div class="name-field">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="Room">
                    <i class="material-icons">home</i>
                </label>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label city-country-input build-room">
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Room, new { @class = "mdl-textfield__input inline-input" })
                        @Html.LabelFor(model => model.Room, new { @class = "mdl-textfield__label" })
                    </div>
                </div>

            </div>
        </div>
        <div>
