                        @Html.TextBoxFor(model => model.MiddleName, new { @class = "mdl-textfield__input inline-input" })
                        @Html.LabelFor(model => model.MiddleName, new { @class = "mdl-textfield__label" })
                    </div>
                </div>

            </div>
        </div>
        <div>
            @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "validation" })
            @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "validation" })
            @Html.ValidationMessageFor(model => model.MiddleName, null, new { @class = "validation" })
        </div>



        <div>
