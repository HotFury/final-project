@model Periodical.Web.Models.PersonalArea.UserRequsitiesModel

@{
    ViewBag.Title = "Реквизиты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageDescription{
    Упарвление реквезитами
}

@using (Html.BeginForm("ManageRequisities","PersonalArea")) {
    @Html.HiddenFor(model => model.Nick)
    @Html.AntiForgeryToken()
    <fieldset>
        @Html.ValidationSummary(true)
        <div>
            <div class="name-field">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="LastName">
                    <i class="material-icons">contacts</i>
                </label>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label name-input">
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "mdl-textfield__input inline-input" })
                        @Html.LabelFor(model => model.LastName, new { @class = "mdl-textfield__label" })
                    </div>
                </div>
                
            </div>

            <div class="name-field">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="FirstName">
                    <i class="material-icons">contacts</i>
                </label>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label name-input">
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "mdl-textfield__input inline-input" })
                        @Html.LabelFor(model => model.FirstName, new { @class = "mdl-textfield__label" })
                    </div>
                </div>
                
            </div>

            <div class="name-field">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="MiddleName">
